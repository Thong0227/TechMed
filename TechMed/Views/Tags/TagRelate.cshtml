@model IEnumerable<TechMed.Areas.Admin.Models.Recruitment.Recruitment>

<div class="breadcrumb_background">
    <span class="overlay"></span>
    <div class="title_full">
        <div class="container a-center">
            <h1 class="title_page">Tin tức</h1>
        </div>
    </div>
</div>
<section class="bread-crumb">
    <span class="crumb-border"></span>
    <div class="container">
        <div class="row">
            <div class="col-12 a-left">
                <ul class="breadcrumb">
                    <li class="home">
                        <a href="/">
                            <span>Trang chủ</span>
                        </a>
                        <span class="mr_lr">
                            &nbsp;<i class="fa fa-angle-right"></i>
                            &nbsp;
                        </span>
                    </li>
                    <li>
                        <strong>
                            <span>Tin tức</span>
                        </strong>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="blogpage">
    <div class="containers" itemscope itemtype="https://schema.org/Blog">
        <meta itemprop="name" content="Tin tức">
        <meta itemprop="description" content="">
        <div class="wrap_background_aside margin-bottom-0">
            <div class="section full_background_blog">
                <div class="container">
                    <div class="row">
                        <partial name="_SidebarPartial" model="Model" />
                        <div class="right-content margin-bottom-fix col-lg-9 col-md-12 col-sm-12 col-xs-12">
                            <section class="list-blogs blog-main listmain_blog">
                                <div class="row row_blog_responsive">
                                    @foreach (var item in Model)
                                    {
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 itembb">
                                            <div class="myblog">
                                                <div class="blogwp">
                                                    <a class="image-blog" asp-controller="Recruitments" asp-action="Details" asp-route-id="@item.Id"
                                                       title="@Html.DisplayFor(modelItem => item.Name)">
                                                        <img class="lazyload"
                                                             src="@Html.DisplayFor(modelItem => item.Image)"
                                                             alt="@Html.DisplayFor(modelItem => item.Name)">
                                                    </a>

                                                    <div class="content_blog">
                                                        <h3>
                                                            <a asp-controller="Recruitments"  asp-action="Details" asp-route-id="@item.Id"
                                                               title="@Html.DisplayFor(modelItem => item.Name)">
                                                                @Html.DisplayFor(modelItem => item.Name)
                                                            </a>
                                                        </h3>

                                                        <p class="justify">
                                                            @Html.Raw(@item.Description)
                                                            <a class="readmore" asp-controller="Recruitments" asp-action="Details" asp-route-id="@item.Id"
                                                               title="Đọc tiếp">
                                                                [Đọc tiếp]
                                                            </a>
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>

                                @* phaan trang*@
                                <div class="text-xs-right pageinate-page-blog section">
                                    <nav class="clearfix relative nav_pagi f-right w_100">
                                        <ul class="pagination clearfix">
                                            <li class="page-item disabled">
                                                <a class="page-link" href="#">
                                                    <i class="fa fa-caret-left"></i>
                                                </a>
                                            </li>
                                            <li class="active page-item disabled">
                                                <a class="page-link" href="#">1</a>
                                            </li>
                                            <li class="page-item">
                                                <a class="page-link" href="/tin-tuc?page=2">2</a>
                                            </li>
                                            <li class="page-item hidden-xs">
                                                <a class="page-link" href="/tin-tuc?page=2">
                                                    <i class="fa fa-caret-right" aria-hidden="true"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </nav>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
