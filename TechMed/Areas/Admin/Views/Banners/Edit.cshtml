@model TechMed.Areas.Admin.Models.Banner.Banner

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Chỉnh sửa</h1>

<h4>Banner</h4>
<hr />
<form asp-action="Edit" enctype="multipart/form-data">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<input type="hidden" asp-for="Id" />
	<div class="row">
		<div class="col-12 col-md-6">
			<div class="form-group">
				<label asp-for="Name" class="control-label">Tên banner</label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ImageUrl" class="control-label">Ảnh</label>
				<div class="d-flex">
					<input type="file" name="ImageUrl" class="form-control" accept="image/*" />
					<img src="@Model.ImageUrl" id="imgData" name="imgData" style="max-width:30px;max-height:30px" />
				</div>
				<span asp-validation-for="ImageUrl" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Status" class="control-label">Trạng thái</label>
				<select asp-for="Status" class="form-control">
					<option value="1">Hoạt động</option>
					<option value="0">Không hoạt động</option>
				</select>
				<span asp-validation-for="Status" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Link" class="control-label">Link dẫn</label>
				<input asp-for="Link" class="form-control" />
				<span asp-validation-for="Link" class="text-danger"></span>
			</div>
		</div>
		<div class="col-12 col-md-6">
			<div class="form-group">
				<label asp-for="StartDate" class="control-label">Ngày bắt đầu</label>
				<input asp-for="StartDate" class="form-control" />
				<span asp-validation-for="StartDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="EndDate" class="control-label">Ngày kết thúc</label>
				<input asp-for="EndDate" class="form-control" />
				<span asp-validation-for="EndDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="BannerPositionId" class="control-label">Vị trí banner</label>
				<select asp-for="BannerPositionId" class="form-control" asp-items="ViewBag.BannerPositionId"></select>
				<span asp-validation-for="BannerPositionId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Order" class="control-label">Sắp xếp</label>
				<input asp-for="Order" class="form-control" />
				<span asp-validation-for="Order" class="text-danger"></span>
			</div>
		</div>
	</div>
	<div class="form-group">
		<input type="submit" value="Save" class="btn btn-primary" />
	</div>
</form>
<script>
	$(document).ready(function () {
		$('form[method="post"]').submit(function () {
			// Lấy giá trị của trường imgData
			var imgData = $('#imgData').attr('src');
			if (imgData) {
				// Thêm giá trị imgData vào một input hidden trong form
				$('<input>').attr({
					type: 'hidden',
					name: 'imgData',
					value: imgData
				}).appendTo('form');
			}

			// Không cần xử lý bất kỳ thứ gì khác, chỉ cần submit form
			return true;
		});
	});
</script>
