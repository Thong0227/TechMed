@model TechMed.Areas.Admin.Models.Banner.Banner

@{
	ViewData["Title"] = "Create";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tạo mới</h1>

<h4>Banner</h4>
<hr />

<form asp-action="Create" enctype="multipart/form-data">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="row">
		<div class="col-12 col-md-6">
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ImageUrl" class="control-label"></label>
				<input type="file" name="ImageUrl" class="form-control" accept="image/*"/>
				<span asp-validation-for="ImageUrl" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Status" class="control-label">Trạng thái</label>
				<select asp-for="Status" class="form-control">
					<option value="1">Hoạt động</option>
					<option value="0">Không hoạt động</option>
				</select>
				<span asp-validation-for="Status" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Link" class="control-label"></label>
				<input asp-for="Link" class="form-control" />
				<span asp-validation-for="Link" class="text-danger"></span>
			</div>
		</div>
		<div class="col-12 col-md-6">
			<div class="form-group">
				<label asp-for="StartDate" class="control-label"></label>
				<input asp-for="StartDate" class="form-control" />
				<span asp-validation-for="StartDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="EndDate" class="control-label"></label>
				<input asp-for="EndDate" class="form-control" />
				<span asp-validation-for="EndDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="BannerPositionId" class="control-label"></label>
				<select asp-for="BannerPositionId" class="form-control" asp-items="ViewBag.BannerPositionId"></select>
				<span asp-validation-for="BannerPositionId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Order" class="control-label"></label>
				<input asp-for="Order" class="form-control" />
				<span asp-validation-for="Order" class="text-danger"></span>
			</div>
		</div>
	</div>
	<div class="form-group">
		<input type="submit" value="Create" class="btn btn-primary" />
	</div>
</form>


<div>
	<a asp-action="Index">Back to List</a>
</div>

