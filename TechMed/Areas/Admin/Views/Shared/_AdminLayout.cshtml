﻿@{
	var currentRoute = ViewContext.RouteData.Values["controller"].ToString().ToLower();
	var viewingDashboard = currentRoute == "home";
	var viewingBanner = currentRoute == "banners";
	var viewingBannerPositions = currentRoute == "bannerpositions";
	var viewingContacts = currentRoute == "contacts";
	var viewingMenus = currentRoute == "menus";
	var viewingNewsCate = currentRoute == "newscate";
	var viewingNews = currentRoute == "news";
	var viewingRecruitmentCates = currentRoute == "recruitmentcates";
	var viewingRecruitment = currentRoute == "recruitment";
	var viewingTags = currentRoute == "tags";
}

<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<meta name="robots" content="noindex">
	<title>TechMed</title>
	<script src="https://kit.fontawesome.com/dfd1d22a1e.js" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link href="~/adminasssets/css/site.css" rel="stylesheet" />
</head>
<body class="bg-white d-flex">
	<div class="sidebar shadow-lg d-none d-md-block">
		<div class="d-flex justify-content-center mb-3 logo">
			<a class="px-2 py-1 fw-bold navbar-brand text-primary"
			   asp-area=""
			   asp-controller="Home"
			   asp-action="Index">
				<img class="w-auto" style="height: 40px" src="/images/techmedcom.png" alt="TechMed">
			</a>
		</div>
		<ul class="nav nav-pills mb-auto">
			<li class="nav-item">
				<a class="nav-link @(viewingDashboard ? "active" : "")" asp-area="Admin" asp-controller="Home" asp-action="Index">
					<i class="fas fa-fw fa-tachometer-alt"></i>
					Dashboard
				</a>
			</li>
			<li class="nav-item">
				<a class="nav-link @(viewingNews ? "active" : "")" aria-current="page" asp-area="Admin" asp-controller="News" asp-action="Index">
					<i class="far fa-newspaper"></i>
					Tin tức
				</a>
			</li>
			<li>
				<a asp-area="Admin" asp-controller="NewsCate" asp-action="Index" class="nav-link @(viewingNewsCate ? "active" : "")">
					<i class="fas fa-list-ol"></i>
					Danh mục tin tức
				</a>
			</li>
			<li>
				<a asp-area="Admin" asp-controller="Recruitment" asp-action="Index" class="nav-link @(viewingRecruitment ? "active" : "")">
					<i class="far fa-building"></i>
					Tuyển dụng
				</a>
			</li>
			<li>
				<a asp-area="Admin" asp-controller="RecruitmentCates" asp-action="Index" class="nav-link @(viewingRecruitmentCates ? "active" : "")">
					<i class="fas fa-list-ol"></i>
					Danh mục tuyển dụng
				</a>
			</li>
			<li>
				<a asp-area="Admin" asp-controller="Tags" asp-action="Index" class="nav-link @(viewingTags ? "active" : "")">
					<i class="fas fa-tag"></i>
					Tags
				</a>
			</li>
			<li>
				<a asp-area="Admin" asp-controller="Menus" asp-action="Index" class="nav-link @(viewingMenus ? "active" : "")">
					<i class="fas fa-bars"></i>
					Menu
				</a>
			</li>
			<li>
				<a asp-area="Admin" asp-controller="Contacts" asp-action="Index" class="nav-link @(viewingContacts ? "active" : "")">
					<i class="far fa-address-card"></i>
					Liên hệ
				</a>
			</li>
			<li>
				<a asp-area="Admin" asp-controller="Banners" asp-action="Index" class="nav-link @(viewingBanner ? "active" : "")">
					<i class="fas fa-images"></i>
					Banner
				</a>
			</li>
			<li>
				<a asp-area="Admin" asp-controller="BannerPositions" asp-action="Index" class="nav-link @(viewingBannerPositions ? "active" : "")">
					<i class="fas fa-map"></i>
					Vị trí banner
				</a>
			</li>
			<li>
				<a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">
					<i class="fa-solid fa-square-caret-left"></i>
					Thoát khỏi trang quản trị
				</a>
			</li>
		</ul>
		<div class="logout-button">
			<a asp-area="Identity" asp-controller="Account" asp-action="Logout" class="btn btn-primary btn-block">Đăng xuất</a>
		</div>
	</div>
	<div class="content">
		@RenderBody()
	</div>
</body>
</html>
